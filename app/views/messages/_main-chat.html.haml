.main-chat
  .main-header
    .main-header__left-box
      %h.main-header__left-box__current-group
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__member-list__member
    %a<>
    = link_to "######", class: "edit-link" do
      .main-header__edit-btn
        edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
        %p.message__upper-info__date
      .message__text
  .form
    .new-message
      .input-box
        %input.input-box_text{ type: "text", placeholder: "type a message" }
        %label.input-box_image{ for: "message-image"}
          =icon('fa', 'image')
          %input.input-box_image-file{ type: "file", id: "message-image" }
      %input.submit-btn{ type: "submit", value: "send" }

      